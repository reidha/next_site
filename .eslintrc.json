{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-extra-semi": "warn",
        "quotes": ["warn", "single"],
        "space-before-blocks": ["warn",
            { 
                "functions": "always",
                "keywords": "always",
                "classes": "always"
            }
        ]
    },
    "globals": {
        "React": "writable",
        "window": false
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 10
    }
}